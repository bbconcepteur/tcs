@if (Request.Url != null && Request.Url.PathAndQuery == "/")
{
    <section class="home-banner-area relative">
        <div class="overlay overlay-bg"></div>
        <div class="container">
            <div class="row fullscreen align-items-end justify-content-center" style="height: 913px;">
                <div class="col-lg-12 col-md-12" style="padding: 10px;">
                    <ul class="nav nav-tabs">
                        <li class="active"><a data-toggle="tab" href="#home">Tra cứu vận đơn</a></li>
                        <li><a data-toggle="tab" href="#menu1">Các hãng hàng không</a></li>
                        <li><a data-toggle="tab" href="#menu2">Thống kê</a></li>
                    </ul>

                    <div class="tab-content">
                        <div id="home" class="tab-pane fade in active">
