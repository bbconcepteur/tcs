                            <p>Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</p>
                        </div>
                        <div id="menu2" class="tab-pane fade">
                            <h3>Menu 2</h3>
                            <p>Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusantium doloremque laudantium, totam rem aperiam.</p>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </section>
}
else
{
    <div class="hundred_percent_css banner_1_css">
        <div class="inner_banner">
            @Html.Raw(@HttpContext.Current.Application[HCSV.Core.Constants.Page.PAGE_BANNER])
        </div>
        <div class="bg_content_css title_banner_css">
            <div class="main_title_banner_css">@HttpContext.Current.Application[Constants.Page.PARENT_MENU_TITLE]</div>
            <div class="breadcrumbs_css">
                <p><a href="#">@HttpContext.Current.Application[Constants.Page.PARENT_MENU_TITLE]</a> » <a href="#">@HttpContext.Current.Application[Constants.Page.MENU_TITLE]</a></p>
            </div>
        </div>
        <div class="bg_content_css"><h2><span>@HttpContext.Current.Application[Constants.Page.MENU_TITLE]</span></h2></div>
    </div>
}