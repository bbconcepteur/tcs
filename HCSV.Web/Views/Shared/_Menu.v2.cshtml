@model IEnumerable<HCSV.Models.ViewModels.Menu>
<div class="main-menu">
    <div class="container">
        <div class="row align-items-center justify-content-between d-flex">
            <div id="logo">
                <a href="/Home"><img src="~/Content/TcsTemplate/themes/orange/images/logotcs_new_2015.jpg" alt="" title="" /></a>
            </div>
            <nav id="nav-menu-container">
                <ul class="nav-menu">
                    @if (Model.Any())
                    {
                        foreach (var level1 in Model)
                        {
                            if (level1.HasChildren)
                            {
                                <li class="menu-has-children">
                                    <a href="@level1.Url">@level1.Name</a>
                                    <ul>
                                        @foreach (var level2 in level1.Childrens)
                                        {
                                            <li><a href="@level2.Url">@level2.Name</a></li>
                                        }
                                    </ul>
                                </li>
                            }
                            else
                            {
                                <li class="menu-active"><a href="@level1.Url">@level1.Name</a></li>
                            }

                        }

                    }
                </ul>
            </nav>
        </div>
    </div>
</div>

