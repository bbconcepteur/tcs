                        <div class="intro_readmore">
                            <a href="/News/Details?contentID=@Model.ValueArea.id&menu=@Model.ValueArea.catid">@HCSV.Resources.GlobalResource.XEM_TIEP</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
<hr />
<section class="blog-area mt-30">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-6 col-sm-12">
                <h3 class="mt-30">@Html.Raw(GlobalResource.TIN_DANH_CHO_KH)</h3>
                @if (Model != null && Model.CustomerNews.Any())
                {
                    foreach (var item in Model.CustomerNews)
                    {
                        <div class="section-top-border">
                            <div class="row">
                                <div class="col-md-5">
                                    <div class="thumb">
                                        @if (item.images != null)
                                        {
                                            <img class="img-fluid" src="~/Content/BoostrapTemplate/img/n0_image_available.png" alt="">
