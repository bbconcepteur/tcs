                                        }
                                    </div>
                                </div>
                                <div class="col-md-7 mt-sm-20">
                                    <a href="@HCSV.Core.UrlHelper.Action(GlobalResource.URL_TIN_TUC, item.catid, item.title, item.id)"> @Html.Raw(item.title)</a>
                                    <div class="meta-bottom d-flex">
                                        <p><span class="lnr lnr-calendar-full"></span> @item.publish_up</p>
