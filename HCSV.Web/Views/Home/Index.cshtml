@model HCSV.Business.Models.DashbroadModel
@using HCSV.Resources
@using HCSV.Core
@using System.IO
@using System.Runtime.Versioning
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = HttpContext.Current.Application[Constants.Page.PAGE_TITLE];
}
<section class="blog-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col_intro">
                <div class="intro_css intro_1_css"></div>
                @if (Model != null && Model.MissionArea != null)
                {
                    <div class="single-property cont_css">
                        <div class="images img_css">
                            @if (Model.MissionArea.images != null)
                            {
                                @*<img class="img-fluid" src="https://colorlib.com/preview/theme/holmes/img/s2.jpg" alt="">*@
                                @Html.Raw(Model.MissionArea.images)
                            }
                            else
                            {
                                <img class="img-fluid" src="~/Content/BoostrapTemplate/img/n0_image_available.png" alt="">
                            }
                        </div>

                        <div class="intro_title">@Html.Raw(Model.MissionArea.title)</div>

                        <div class="desc">
                            <div class="text-wrap">
                                <p>
                                    @Html.Raw(Model.MissionArea.introtext)
                                </p>
                            </div>
                            <div class="clearfix"></div>
                        </div>

                        <div class="intro_readmore">
                            <a href="/News/Details?contentID=@Model.MissionArea.id&menu=@Model.MissionArea.catid">@HCSV.Resources.GlobalResource.XEM_TIEP</a>
                        </div>
                    </div>
                }
            </div>
            <div class="col-lg-4 col_intro">
                <div class="intro_css intro_2_css"></div>
                @if (Model != null && Model.VisionArea != null)
