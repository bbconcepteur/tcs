                                <p>
                                    @Html.Raw(Model.VisionArea.introtext)
                                </p>
                            </div>
                            <div class="clearfix"></div>
                        </div>

                        <div class="intro_readmore">
                            <a href="/News/Details?contentID=@Model.VisionArea.id&menu=@Model.VisionArea.catid">@HCSV.Resources.GlobalResource.XEM_TIEP</a>
                        </div>
                    </div>
                }
            </div>
            <div class="col-lg-4 col_intro">
                <div class="intro_css intro_3_css"></div>
                @if (Model != null && Model.ValueArea != null)
