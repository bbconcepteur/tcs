@using HCSV.Core
@model List<HCSV.Models.ViewModels.Menu>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    @if (Model != null && Model.Any())
    {
        foreach (var item in Model)
        {

            <div class="col-lg-3 mt-10">
                <div class="widget">
                    <h4 class="widget-title line-bottom"><a href="@item.Url">@item.Name</a></h4>
                    @if (item.HasChildren)
                    {
                        <div class="categories">
                            <ul class="list list-border angle-double-right">
                                @foreach (var childItem in item.Childrens)
                                {
                                    <li><a href="@childItem.Url">@childItem.Name</a></li>
                                }
                            </ul>
                        </div>
                    }
                    
                </div>
            </div>
        }
    }

</div>

