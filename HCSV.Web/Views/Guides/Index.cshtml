@model HCSV.Business.Models.ContentModel<HCSV.Models.jos_content>
@{
    ViewBag.Title = HttpContext.Current.Application[HCSV.Core.Constants.Page.PAGE_TITLE];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model != null && Model.ListValues != null && Model.ListValues.Any())
{
    int i = 0;
    <div class="row">
        <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
            @foreach (var item in Model.ListValues)
            {

                if (i == 0)
                {
                    <a class="nav-link active" id="v-tab-@i" data-toggle="pill" href="#tab-@i" role="tab" aria-controls="v-pills-home" aria-selected="true">@Html.Raw(item.title)</a>
                }
                else
                {
                    <a class="nav-link" id="v-tab-@i" data-toggle="pill" href="#tab-@i" role="tab" aria-controls="v-pills-home" aria-selected="true">@Html.Raw(item.title)</a>
                }
                i++;

            }
        </div>
        <div class="tab-content" id="v-pills-tabContent">
            @{ i = 0;}
            @foreach (var item in Model.ListValues)
            {

                if (i == 0)
                {
                    <div class="tab-pane fade show active" id="tab-@i" role="tabpanel" aria-labelledby="v-tab-@i">@Html.Raw(item.introtext)</div>
                }
                else
                {
                    <div class="tab-pane fade show" id="tab-@i" role="tabpanel" aria-labelledby="v-tab-@i">@Html.Raw(item.introtext)</div>
                }
                i++;

            }

        </div>

    </div>
}
